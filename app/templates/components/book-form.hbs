<h2>Add new book</h2>

<form {{action 'submit' on='submit'}}>
  <div class="form-group {{if errors.title 'has-error'}}">
    <label for="">Title</label>
    {{input class="form-control" value=book.title action="validateTitle" on="focus-out" }}
    {{#each errors.title as |error|}}
      <span class="help-block">{{error.message}}</span>
    {{/each}}
  </div>

  <div class="form-group {{if errors.author 'has-error'}}">
    <label for="">Author</label>
    {{input class="form-control" value=book.author action="validateAuthor" on="focus-out"}}
    {{#each errors.author as |error|}}
      <span class="help-block">{{error.message}}</span>
    {{/each}}
  </div>

  <div class="form-group">
    <label for="">Description</label>
    {{textarea class="form-control" value=book.description}}
  </div>
  <button class="btn btn-primary" type="submit">{{buttonLabel}}</button>
</form>
